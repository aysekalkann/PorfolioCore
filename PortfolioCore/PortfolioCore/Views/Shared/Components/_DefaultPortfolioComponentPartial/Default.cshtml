@model List<Category>

<section id="portfolio" class="portfolio section light-background">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Çalışmalarım</h2>
        <p>Kendi çalışma yapmış olduğum projelerimle ilgili görsellere aşağıdan erişim sağlayabilirsiniz.</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="isotope-layout" data-default-filter="*" data-layout="masonry" data-sort="original-order">

            <!-- Filtreler -->
            <ul class="portfolio-filters isotope-filters" data-aos="fade-up" data-aos-delay="100">
                <li data-filter="*" class="filter-active">Tümü</li>
                @foreach (var item in Model)
                {
                    <li data-filter=".filter-@item.CategoryId">@item.CategoryName</li>
                }
            </ul><!-- End Portfolio Filters -->

            <!-- Proje Kartları -->
            @await Component.InvokeAsync("_DefaultMyProjectComponentPartial")

        </div><!-- End Isotope Layout -->

    </div>

</section>